{% extends 'base.html.twig' %}


{% block title %}Episode index{% endblock %}

{% block body %}
   <div class="container mt-5">
        <h1 class="my-5">List of episodes of the season </h1>

       <table class="table table-bordered border-success table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>Synopsis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a class="btn bg-success text-light" href="{{ path('episode_show', {'id': episode.id}) }}">show</a>
                    <a class="btn bg-success text-light mt-3" href="{{ path('episode_edit', {'id': episode.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn bg-success text-light mt-3" href="{{ path('episode_new') }}">Create new</a>
    </div>
{% endblock %}

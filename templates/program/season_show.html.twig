{% extends 'base.html.twig' %}

{% block title %}Wild Séries | 
		Serie

	{{ program.title }}
	Season
	{{ season.number }}
{% endblock %}

{% block stylesheets %}

	{{ parent() }}
{% endblock %}

{% block body %}

	<section class="container">
		<div class="row">
			<div class="col-4 mt-5">
				<img class="align-self-start  w-100 mt-5 p-5" src="{{program.poster}}" alt="{{ program.title }} poster">
			</div>
			<div class="col-8 mt-5">

				<h1 class="mt-5">{{program.title}}</h1>
				<h2>Season {{ season.number }}</h2>
				<p>
					<span class="fw-bold">Description:
					</span>
					{{ season.description }}</p>

				{% for episode in episodes %}

					<a class="my-3 d-block " href="{{ path("program_episode_show", {"program_slug": program.slug, "season_id": season.id, "episode_slug": episode.slug}) }}">
						<p><span class="fw-bold text-success">Episode {{episode.number}}</span> : {{ episode.title }}</p>	
					</a>
			{% endfor %}

		</div>
		<a class="d-block m-auto mx-5 my-5 text-success" href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
	</div>

	
</section>{% endblock %}
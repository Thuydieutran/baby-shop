{# templates/program/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}


{% block body %}


        <div class="row">
			<div class="col-4 mt-5">
				<img class="align-self-start  w-100 mt-5 p-5" src="{{program.poster}}" alt="">
			</div>
			<div class="col-8 mt-5">

                <h1 class="mt-0">{{ program.title }}</h1>

                <p class="fst-italic">{{ program.summary }}</p>

                <p class="fs-5">Catégorie : {{ program.category.name }}</p>
				
                {% for season in seasons %}
						
						<a href="{{ path("program_season_show", {"program_id": program.id, "season_id": season.id}) }}">
							<span class="fw-bold"> Season {{ season.number }}</span>
						</a>
						<p>Year: {{ season.year }}</p>

					<p>
						<span class="fw-bold">Description:</span>
						{{ season.description }}</p>

				
				{% endfor %}
	        </div>  
         </div>        
<a class="text-dark fw-bold" href="{{ path('program_index') }}">

    Retour à la liste des programmes

</a>


{% endblock %}